        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <!-- Text color. -->
        <item name="android:textColor">@color/lavender</item>
        <!-- Background color. -->
        <item name="android:backgroundTint">@color/light_grey</item>
